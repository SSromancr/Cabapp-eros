<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/fondofunciona"
    tools:context="com.example.monitor.cabappneros.Vinuela">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/referencia2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#af99cc66">

        <RelativeLayout
            android:id="@+id/referencia"
            android:layout_width="match_parent"
            android:layout_height="76dp">

            <ImageView
                android:id="@+id/logoB1"
                android:layout_width="120dp"
                android:layout_height="150dp"


                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:paddingLeft="-18dp"
                app:srcCompat="@mipmap/caba" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/logoB1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/botonO1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    android:background="#336600"
                    android:text="Rutas"
                    android:textAllCaps="false"
                    android:textColor="#66CC66"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/botonO2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    android:background="#336600"
                    android:text="P.Interés"
                    android:textAllCaps="false"
                    android:textColor="#66CC66"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/botonO3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    android:background="#336600"
                    android:text="Parque"
                    android:textAllCaps="false"
                    android:textColor="#66CC66"
                    android:textStyle="bold" />
            </LinearLayout>


        </RelativeLayout>

    </android.support.design.widget.AppBarLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/textoO1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="22dp"
            android:layout_marginTop="100dp"
            android:text="Ruta de la Viñuela "
            android:textColor="#336600"
            android:textSize="26dp" />

        <TextView
            android:id="@+id/textoO2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textoO1"
            android:layout_below="@+id/textoO1"
            android:layout_marginRight="15dp"
            android:layout_marginTop="23dp"
            android:text="Ruta que atraviesa una vía pecuaria y el valle de la Viñuela a través de un robledal centenario."
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/imagenO1"
            android:layout_width="99dp"
            android:layout_height="80dp"
            android:layout_below="@+id/textoO2"
            android:layout_marginStart="49dp"
            android:layout_marginTop="59dp"
            android:layout_toEndOf="@+id/imagenO2"
            app:srcCompat="@mipmap/stop" />

        <ImageView
            android:id="@+id/imagenO2"
            android:layout_width="87dp"
            android:layout_height="77dp"
            android:layout_alignStart="@+id/textoO2"
            android:layout_alignTop="@+id/imagenO1"
            android:layout_marginStart="55dp"
            app:srcCompat="@mipmap/play"
            android:layout_alignBottom="@+id/imagenO1" />


    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>
